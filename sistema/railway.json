{
  "$schema": "https://railway.app/railway.schema.json",

  "services": {
    "backend": {
      "path": "sistema/backend",
      "name": "hotel-backend",
      "build": { "builder": "NIXPACKS" },
      "start": { "cmd": "npm start" }
    },
    "frontend": {
      "path": "sistema/src",
      "name": "hotel-frontend",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build"
      },
      "start": {
        "cmd": "npx serve -s dist"
      }
    }
  }
}
