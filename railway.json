{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "backend": {
      "name": "hotel-backend",
      "path": "sistema/backend",
      "build": {
        "builder": "NIXPACKS"
      },
      "start": {
        "cmd": "npm start"
      }
    },
    "frontend": {
      "name": "hotel-frontend",
      "path": "sistema",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build"
      },
      "start": {
        "cmd": "npx serve -s dist"
      }
    }
  }
}
